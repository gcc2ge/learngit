		var gridster;
		var gridinited=0;
		var $sizeable;
		var hostname="http://localhost:8080/demo";
		function init(){
			gridinited=0;
			gridster = $(".gridster ul").gridster({
		          widget_base_dimensions: [100, 55],
		          widget_margins: [5, 5],
				  min_cols: 10,
				  helper: 'clone',
				  draggable: {
		            handle: '.moveable',
					start: function (e, ui, $widget) {
			        },
			        drag:function(e,ui,$widget){
			        },
			        stop: function (e, ui, $widget) {
						 gridster.$preview_holder.remove();
			        }
		          },
	           	  resize: {
		            enabled: true,
		            start: function(e, ui, $widget) {
						$sizeable=$widget.find(".sizeable").eq(0);
					//	console.info("resize begin");
					//	console.info(gridster.$el.prop("outerHTML"));
		            },
		            resize: function(e, ui, $widget) {
						
						//需要修改
						//console.info($widget.html());
						$sizeable.width($widget.width());
						$sizeable.height($widget.height()-5);
						
						if($widget.find("input[name='classname']").val()=='text'){
							 $sizeable.css("line-height",$widget.height()+"px");
						}else if($widget.find("input[name='classname']").val()=='pic'){
							$sizeable.height($widget.height()-15);
						}else if($widget.find("input[name='classname']").val()=='website'){
							$sizeable.height($widget.height()-15);
						}
						//
		            },

		            stop: function(e, ui, $widget) {
						$sizeable.width($widget.width());
						$sizeable.height($widget.height()-5);
						
						if($widget.find("input[name='classname']").val()=='text'){
							 $sizeable.css("line-height",$widget.height()+"px");
						}else if($widget.find("input[name='classname']").val()=='pic'){
							$sizeable.height($widget.height()-15);
						}
						gridster.$resize_preview_holder.remove().css({
					                'min-width': '',
					                'min-height': ''
					            });
					//	$(".preview-holder").remove();
//						$widget.find(".sizeable").eq(0).width($widget.width());
//						$widget.find(".sizeable").eq(0).height($widget.height()-5);
		            }
		         }
		        }).data('gridster');
				//grid 插件初始化完成
				gridinited=1;
		}
      
		
